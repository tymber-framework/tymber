{
  "name": "@tymber/core",
  "version": "0.0.1",
  "description": "Core module for the Tymber framework",
  "license": "MIT",
  "author": "Damien ARRACHEQUESNE",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tymber-framework/tymber.git"
  },
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "compile": "rm -rf dist/ && tsc",
    "format:check": "prettier -c src/ test/",
    "format:fix": "prettier -w src/ test/",
    "test": "tsx --test",
    "test:sqlite": "USE_SQLITE=1 npm test"
  },
  "dependencies": {
    "@tymber/common": "~0.0.1",
    "argon2": "~0.44.0"
  },
  "devDependencies": {
    "@tymber/client": "^0.0.1",
    "@tymber/postgres": "^0.0.1",
    "@tymber/sqlite": "^0.0.1"
  },
  "files": [
    "src/",
    "dist/"
  ],
  "exports": {
    "node": "./dist/index.js",
    "bun": "./src/index.ts",
    "deno": "./src/index.ts"
  },
  "keywords": [
    "tymber",
    "typescript",
    "framework"
  ]
}
